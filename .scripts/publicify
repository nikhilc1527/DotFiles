#!/bin/sh

# forward ssh connection to website port 6969
ssh -R 6969:localhost:22 root@nikhilchatterjee.com -N &

# start vnc server
killall x0vncserver
x0vncserver -Display :0 -PasswordFile ~/.config/vnc/passwd &

# forward vnc server to port 420
ssh -R 420:localhost:5900 root@nikhilchatterjee.com -N &

# forward minecraft to port 16969
ssh -R 16969:localhost:25565 root@nikhilchatterjee.com -N &

miniserve ~/MyFiles/Nikhil/meetings/ -p 1234 &
